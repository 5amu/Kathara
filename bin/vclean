#!/bin/bash

if [ $# -ne 1 ]; then
	echo Usage: $0 machine_name
	exit 1
fi

FORCE_RT=""
for i in "$@"
do
case $i in
    --T)
    FORCE_RT="-T"
    #shift 
    ;;
    --remove-tunnels)
    FORCE_RT="-T"
    #shift 
    ;;
    --clean-all)
    FORCE_RT="-T"
    #shift
    ;;
    *)
    # unknown option
    ;;
esac
done

$NETKIT_HOME/lclean $FORCE_RT -d "$HOME/netkit_temp/labs/netkit_`echo $UID`_${@: -1}"
